extends layout

block content
    form(action="/reports/create_report/"+uuid+"/"+identity_uuid, method="POST")
        button(type="submit") Create report
    
    for report in reports
        .report-group
            p danger : #{report.danger_indice}
            form(action="/reports/delete_report/"+uuid+"/"+identity_uuid+"/"+report.uuid, method="POST") 
                button(type="submit") Delete